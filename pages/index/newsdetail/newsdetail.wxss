.detail-con {
  width: 100%;
  height: auto;
  font-size: 32rpx;
  background: #fff;
  padding: 0 20rpx;
}
.detail-top {
  width: 100%;
  height: 50rpx;
  line-height: 50rpx;
  font-weight: 540;
  font-size: 32rpx;
}
.detail-all {
  width: 100%;
  height: 140rpx;
  display: flex;
  align-items: center;
}
.detail-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;
}
.detail-right {
  width: 60%;
  height: 90rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 30rpx;
  margin-left: 20rpx;
}
.detail-img image {
  width: 100%;
  height: 100%;
}

.detail-banner {
  width: 100%;
  height: 400rpx;
  border-radius: 3rpx;
  overflow: hidden;
  padding: 6rpx;
}
.detail-banner image {
  width: 100%;
  height: 100%;
}
.detail-text {
  font-size: 28rpx;
  color:  #363636;
  text-indent: 20rpx;
  line-height: 40rpx;
}

.ping-all {
  width: 100%;
  height: auto;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 100rpx;
  padding: 20rpx 0;
}
.ping-item {
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
}
.ping-img {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;
}
.ping-img image {
  width: 100%;
  height: 100%;
}

.ping-right {
  width: 82%;
  height: 80rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  font-size: 30rpx;
  margin-left: 20rpx;
}
.ping-text {
  width: 100%;
  height: auto;
  padding-left: 94rpx;
  font-size: 26rpx;
}
.ping-good {
  width: 100%;
  display: flex;
  justify-content: space-between;
}

.send-msg {
  width: 100%;
  height: 80rpx;
  display: flex;
  box-sizing: border-box;
  padding: 0 20rpx;
  position: fixed;
  bottom: 0;
  left: 0;
  justify-content: space-between;
  align-items: center;
  background: #fff;
}
.send-msg input {
  width: 70%;
  height: 60rpx;
  border: 1rpx solid #dfdfdf;
  border-radius: 30px;
  background: #fff;
  padding-left: 20px;
}
.send-msg view {
  width: 150rpx;
  height: 60rpx;
  line-height: 60rpx;
  text-align: center;
  color: #000000;
}
.ping-num {
  width: 100%;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 30rpx;
  font-weight: 540;
  margin-top: 20rpx;
}