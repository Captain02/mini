@import "../../components/news/news.wxss";
page {
  background: #eef2f4;
}
.top-bar {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  justify-content: space-between;
  text-align: center;
  background: #fff;
}
.top-bar-item {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}
.top-bar-item > text.active {
  padding-bottom: 20rpx;
  border-bottom: 1px solid #dfdfdf;
}
.new-con {
  width: 100%;
  height: auto;
  padding: 0 20rpx;
}