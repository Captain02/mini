@import "../../components/news/news.wxss";
.grid.col-3>view {
  width: 48%;
}
page {
  background: #eef2f4;
  text-align: center;
}
.top-bar {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  /* position: fixed;
  top: 0;
  left: 0; */
  justify-content: space-between;
  text-align: center;
  background: #fff;
  z-index: 120;
}
.top-bar-item {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}
.top-bar-item > text.active {
  padding-bottom: 20rpx;
  border-bottom: 1px solid #dfdfdf;
}
.new-con {
  width: 100%;
  height: auto;
  padding: 0 20rpx;
}
.add-con {
  position: fixed;
  bottom: 350rpx;
  right: 30rpx;
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
  overflow: hidden;
  z-index: 100;
  font-size: 70rpx;
  line-height: 80rpx;
}
