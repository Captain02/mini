@import "../index/index.wxss";
.top-bar {
  width: 100%;
  height: 90rpx;
  line-height: 90rpx;
  display: flex;
  position: fixed;
  top: 0;
  left: 0;
  justify-content: space-between;
  text-align: center;
  background: #fff;
  z-index: 120;
}
.top-bar-item {
  width: 50%;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 30rpx;
}
.top-bar-item > text.active {
  padding-bottom: 20rpx;
  border-bottom: 1px solid #dfdfdf;
}
.cu-card {
  margin-top: 20rpx;
  border-bottom: 1px solid #dfdfdf;
}